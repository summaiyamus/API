    }

    // Handle the form submission for updating the book data
    const errorMessage = document.getElementById('errorMessage');

    document.getElementById('bookForm').addEventListener('submit', async function (event) {
        event.preventDefault();
        const formData = new FormData(event.target);
        // const title = encodeURIComponent(formData.get('title')); // Encode the title

        const data = {
           
            author: formData.get('author'),
            pub_year: formData.get('pub_year'),
            title: formData.get('title'),
        };
console.log(data)
        const response = await fetch('/api/updateBook', {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });

        if (response.ok) {
            document.getElementById('successMessage').textContent = 'Record Updated successfully!';
        } else {
            document.getElementById('successMessage').textContent = 'Error';
        }
    });

